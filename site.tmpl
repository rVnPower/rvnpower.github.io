{{ define "page" }}{{ template "header" . }}
<h4>{{ .Title }}</h4>
{{ .Content }}{{ template "footer" . }}{{ end }}

{{ define "date" }}{{ .Format "2006/01/02" }}{{ end }}

{{ define "pagelist" }}{{ range . }}    
<section class="post">
  <div class="date">
    {{ template "date" .Date }}
  </div>
  <div class="content">
    <h4><a href="/{{ .Url }}">{{ .Title }}</a></h4>
    {{ .Other.Preface }}
  </div>
</section>
{{ end }}{{ end }}

{{ define "post" }}
      <div class="info">
        Tags:
        {{ range $i, $t := .Tags }}{{ if $i }},{{ end }}
        <a href="/tags/{{ $t }}/">{{ $t }}</a>{{ end }}
      </div>
      <div class="preface">
        {{ .Other.Preface }}
      </div>
      {{ .Content }}    
{{ end }}

{{ define "tag" }}    <h1>`{{ .Title }}` tagged post(s)</h1>
{{ template "pagelist" .Site.Pages.WithTag .Title }}{{ end }}
